<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="co.sol.mapper.DataMapper">

	<select id="getEList" resultType="co.sol.main.EVO">
		select * from exercise
		<trim prefix="where"> <!-- div, partno? and/or  prefixOverrides="and" -->
			<choose>
				<when test="e_div!=null">e_div=#{e_div}</when>
				<when test="e_part!=null">e_part=#{e_part}</when>
				<when test="e_cau!=null">e_cau=#{e_cau}</when>
			</choose>
		</trim>
	</select>
	
	
	<insert id="addExercise">
		<selectKey keyProperty="e_no" order="BEFORE" resultType="int">
			select max(e_no)+1 from e_table
		</selectKey>
		insert into e_table values(e_no,)
	</insert>

</mapper>
